<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bskup.lyra.MainActivity">

    <TextView
        android:id="@+id/album_text_view"
        style="@style/TextViewStyle"
        android:text="@string/album_info_text"/>

    <Button
        android:id="@+id/album_library_button"
        style="@style/ButtonStyle"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/album_text_view"
        android:text="Library"/>

    <Button
        android:id="@+id/album_lyrics_button"
        style="@style/ButtonStyle"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/album_library_button"
        android:text="Lyrics"/>

    <Button
        android:id="@+id/album_settings_button"
        style="@style/ButtonStyle"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/album_lyrics_button"
        android:text="Settings"/>

    <Button
        android:id="@+id/album_artist_button"
        style="@style/ButtonStyle"
        android:layout_alignParentRight="true"
        android:layout_below="@id/album_text_view"
        android:text="Go To Artist"/>

    <Button
        android:id="@+id/album_home_button"
        style="@style/ButtonStyle"
        android:layout_alignParentRight="true"
        android:layout_below="@id/album_artist_button"
        android:text="Home"/>

</RelativeLayout>
